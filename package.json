{
  "name": "mississippi.wtf",
  "version": "0.0.2",
  "description": "search for your state level representatives",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:spec",
    "test:lint": "eslint --ignore-pattern 'dist' **/*.js",
    "test:spec": "tape routes.spec.js | tap-spec",
    "static": "mkdir -p dist && cp src/index.html dist",
    "build": "npm run static && npm run build:frontend",
    "build:frontend": "browserify src/index.js -t [ babelify --presets [ es2015 ] --plugins [ inferno ] ] > dist/app.js",
    "dev": "npm run static & npm run dev:server & npm run dev:spec & npm run dev:frontend",
    "dev:frontend": "watchify src/index.js -t [ babelify --presets [ es2015 ] --plugins [ inferno ] ] -o dist/app.js",
    "dev:server": "nodemon --ignore '*.spec.js' & browser-sync start --no-ghost-mode --proxy localhost:3000 --port 9000 --files 'public/**/*.*'",
    "dev:spec": "tape-watch routes.spec.js | tap-spec",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@git.diff.mx:diffalot/contact-ms-senator.git"
  },
  "keywords": [
    "twilio",
    "sunlight"
  ],
  "author": "Andrew Davis <andrew@diff.mx>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.3.4",
    "dotenv": "^2.0.0",
    "hapi": "^13.2.2",
    "inert": "^3.2.0",
    "inferno": "^1.0.0-beta43",
    "inferno-redux": "^0.7.27",
    "is-phone": "^2.0.0",
    "node-geocoder": "^3.9.1",
    "node-uuid": "^1.4.7",
    "openstates": "0.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-saga": "^0.14.0"
  },
  "devDependencies": {
    "babel-plugin-inferno": "^1.3.0-beta17",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.11.2",
    "browserify": "^13.1.1",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-standard": "^2.0.1",
    "js-yaml": "^3.7.0",
    "nodemon": "^1.9.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.8.0"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react"
    ],
    "globals": {},
    "rules": {
      "no-multi-spaces": 0,
      "standard/object-curly-even-spacing": 0,
      "react/react-in-jsx-scope": 0
    }
  }
}
